<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/welcomescreen"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:text="Login"
        android:textStyle="bold"
        android:fontFamily="consolas"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="40sp"
        android:textColor="#57b490"
    />

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text|numberPassword"
        android:hint="Enter User Name"
        android:focusable="true"
        android:textColorHighlight="#277538"
        android:textColorHint="#b2e7d3"
        android:padding="20sp"
        android:layout_margin="10sp"
        android:textColor="#FF0000"
        android:textStyle="bold"
    />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:focusable="true"
        android:padding="20sp"
        android:layout_margin="10sp"
        android:textColorHighlight="#277227"
        android:textColorHint="#b2e7d3"
        android:textColor="#FF0000"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/login"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="#57b490"
            android:background="#d4ffea"
            android:gravity="center"
            android:fontFamily="consolas"
            android:textSize="18sp"
            android:padding="5sp"
            android:layout_margin="45sp"
            android:textStyle="bold"

        />

        <Button
            android:id="@+id/abort"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ABORT"
            android:textColor="#57b490"
            android:background="#d4ffea"
            android:gravity="center"
            android:fontFamily="consolas"
            android:textSize="18sp"
            android:padding="5sp"
            android:layout_margin="45sp"
            android:textStyle="bold"
        />

    </LinearLayout>


</LinearLayout>