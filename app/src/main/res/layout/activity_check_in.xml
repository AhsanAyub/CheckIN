<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/backgroundimage"
    tools:context="com.example.ahsan_000.checkin.CheckIN">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:layout_weight="1.35"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:text="@string/customied_action_setting"
            android:textSize="60sp"
            android:textStyle="bold"
            android:padding="20sp"
            android:gravity="center"
            android:textColor="#164d4d"
            android:fontFamily="consolas"
        />

        <ToggleButton

            android:id="@+id/TrackMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#d4ffea"
            android:textColor="#57b490"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="20sp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
        />

    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:padding="20sp"
        android:text="LOG OUT"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#d4ffea"
        android:textColor="#57b490"
        android:layout_margin="10sp"
    />

</RelativeLayout>
