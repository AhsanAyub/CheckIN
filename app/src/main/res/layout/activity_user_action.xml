<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/backgroundimage"
    tools:context="com.example.ahsan_000.checkin.UserAction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="7"
        android:orientation="vertical">

        <TextView
            android:layout_weight="1"
            android:text="Classes:"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:fontFamily="consolas"
            android:textSize="30sp"
            android:textStyle="bold"
            android:padding="10sp"
            android:textColor="#164d4d"
            android:gravity="bottom"
        />

        <TextView
            android:id="@+id/sectionList"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:padding="10sp"
            android:layout_margin="10sp"
            android:textSize="40dp"
            android:textColor="#164d4d"
            android:textStyle="bold"
            android:gravity="top"
            >
        </TextView>

        <TextView
            android:layout_weight="1"
            android:id="@+id/Room"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:padding="10sp"
            android:textColor="#164d4d"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="bottom"
            android:fontFamily="consolas"
            />

        <EditText
            android:layout_weight="2"
            android:id="@+id/messageBox"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:inputType="text"
            android:hint="Send Message"
            android:focusable="true"
            android:textColorHighlight="#277538"
            android:textColorHint="#b2e7d3"
            android:padding="20sp"
            android:gravity="bottom"
        />
    </LinearLayout>

    <Button
        android:id="@+id/hitDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="20sp"
        android:text="SEND"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#57b490"
        android:background="#d4ffea"
        android:layout_margin="5sp"
    />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="20sp"
        android:text="EXIT"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#57b490"
        android:background="#d4ffea"
        android:layout_margin="5sp"
    />
</RelativeLayout>